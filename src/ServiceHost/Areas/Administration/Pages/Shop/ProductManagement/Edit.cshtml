@model ShopManagement.Application.Contract.ProductCategoryApplication.UpdateProductCategory
@{
    SelectList ProductCategoriesSelectList = ViewData["ProductCategoriesSelectList"] as SelectList ?? throw new ArgumentNullException("دسته بندی پیدا نشد");
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش گروه محصول: @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="error"></span>
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Slug" class="control-label">اسلاگ</label>
                    <input type="text" disabled class="form-control" asp-for="@Model.Slug" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="@Model.Slug" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.ImageSrc" class="control-label">عکس</label>
                    <input class="form-control" asp-for="@Model.ImageSrc">
                    <span asp-validation-for="@Model.ImageSrc" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.ImageAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="@Model.ImageAlt">
                    <span asp-validation-for="@Model.ImageAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.ImageTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="@Model.ImageTitle">
                    <span asp-validation-for="@Model.ImageTitle" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="@Model.Description" onchange="fillField('Description', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="@Model.Description" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Keywords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="@Model.Keywords">
                    <span asp-validation-for="@Model.Keywords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="@Model.MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="@Model.MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>